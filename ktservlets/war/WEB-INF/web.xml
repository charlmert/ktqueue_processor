<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  <display-name>KnowledgeTree Servlets</display-name>

  <servlet>
    <servlet-name>DocumentMetadataServlet</servlet-name>
    <display-name> KnowledgeTree Metadata Servlet (REST)</display-name>
    <servlet-class>com.knowledgetree.servlets.DocumentMetadataServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>DocumentMetadataServlet</servlet-name>
    <url-pattern>/metadata/update</url-pattern>
  </servlet-mapping>

</web-app>
